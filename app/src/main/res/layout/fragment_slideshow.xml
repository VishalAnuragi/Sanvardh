<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp"
    android:background="#efefef"
    tools:context=".ui.slideshow.SlideshowFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/au1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/aboutusIMG"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:background="@drawable/aboutus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/aboutusIMG"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:text="About us"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold|italic"
            android:textSize="33sp" />

    </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/au1"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/au3"
        android:layout_below="@+id/au2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/vishal"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textAllCaps="false"
                    android:textColor="#0f0f0f"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IET Lucknow  (IT)"
                    android:textAllCaps="false"
                    android:textColor="#0f0f0f"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll NO : 1705213057"
                    android:textAllCaps="false"
                    android:textColor="#0f0f0f"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/yash"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img2"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student"
                        android:textAllCaps="false"
                        android:textColor="#0f0f0f"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IET Lucknow  (IT)"
                        android:textAllCaps="false"
                        android:textColor="#0f0f0f"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roll NO : 1705213060"
                        android:textAllCaps="false"
                        android:textColor="#0f0f0f"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/shekhar"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img3"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student"
                        android:textAllCaps="false"
                        android:textColor="#0f0f0f"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IET Lucknow  (IT)"
                        android:textAllCaps="false"
                        android:textColor="#0f0f0f"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roll NO : 1705213040"
                        android:textAllCaps="false"
                        android:textColor="#0f0f0f"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/iet"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/au3"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iet"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au6"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/au4"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/au5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanvardh is our Final Year Project based on the theme of Education with Augmented Reality. "
            android:textSize="17sp"
            android:textColor="#0f0f0f"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au5"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>