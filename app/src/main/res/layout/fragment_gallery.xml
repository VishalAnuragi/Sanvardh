<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp"
    android:background="#efefef"
    tools:context=".ui.gallery.GalleryFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/au1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:padding="5dp">

            <ImageView
                android:id="@+id/aboutappIMG"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:background="@drawable/sanvardhicon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/aboutappIMG"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="15dp"
                android:text="About Sanvardh"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold|italic"
                android:textSize="33sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/au1"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au2"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanvardh is an Android Application built using Android Studio 4.2.2."
                android:textSize="17sp"
                android:textColor="#0f0f0f"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_below="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is developed using Java and Kotlin, and designed using XML."
                android:textSize="17sp"
                android:textColor="#0f0f0f"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au3"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It uses Firebase Authentication Service to register users with their email id and provide a secure login."
                android:textSize="17sp"
                android:textColor="#0f0f0f"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au4"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using Google ARCore SceneViewer, Sanvardh provides a platform to view 3d models giving a real world visualization of the models to the user."
                android:textSize="17sp"
                android:textColor="#0f0f0f"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au5"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="200dp">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:background="@drawable/javalogo"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au5"
        android:layout_marginTop="100dp"
        android:layout_marginStart="120dp"
        app:cardCornerRadius="200dp">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:background="@drawable/kotlin"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="180dp"
        app:cardCornerRadius="200dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:background="@drawable/as"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/au5"
        android:layout_marginTop="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="200dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:background="@drawable/firebase"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/au6"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="200dp">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:background="@drawable/arc"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/au6"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        app:cardCornerRadius="200dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@drawable/xml"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/au6"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/au6"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:text="version 1.0"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>